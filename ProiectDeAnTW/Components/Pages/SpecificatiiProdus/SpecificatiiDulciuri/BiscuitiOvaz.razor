@page "/dulciuri/BiscuitiOvaz"

<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabel Nutriție Biscuiți cu Ovăz</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f3e5ab;
            text-align: center;
        }
        table {
            width: 70%;
            margin: 20px auto;
            border-collapse: collapse;
            background: linear-gradient(135deg, #ffdd94, #ffb347);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.3);
        }
        th, td {
            border: 1px solid #e0a800;
            padding: 15px;
            text-align: center;
            font-size: 18px;
            color: #5a3d0c;
        }
        th {
            background-color: #e0a800;
            color: white;
            text-transform: uppercase;
        }
        tr:nth-child(even) {
            background-color: #fff3cd;
        }
        .category {
            font-weight: bold;
            background-color: #ffd966;
        }
        h2 {
            color: #b36b00;
            font-size: 28px;
            margin-bottom: 15px;
        }
        .offer {
            display: inline-block;
            background-color: #d48806;
            color: white;
            padding: 15px 25px;
            border-radius: 10px;
            font-size: 20px;
            font-weight: bold;
            margin-top: 20px;
            box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
        }
        .navigation-container {
            width: 70%;
            margin: 20px auto;
            background-color: #f8e8d0;
            border-radius: 10px;
            box-shadow: 4px 4px 15px rgba(0, 0, 0, 0.2);
            padding: 15px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .navigation-button {
            background-color: #e6a756;
            color: white;
            padding: 10px 15px;
            margin: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 16px;
        }
    </style>
</head>
<body>

<h2>Informații Nutriționale Biscuiți cu Ovăz</h2>

<table>
    <thead>
        <tr>
            <th>Categoria</th>
            <th>Valoare per 100g</th>
            <th>% DZR*</th>
        </tr>
    </thead>
    <tbody>
        <tr class="category">
            <td>Calorii</td>
            <td>450 kcal</td>
            <td>23%</td>
        </tr>
        <tr>
            <td>Proteine</td>
            <td>8g</td>
            <td>16%</td>
        </tr>
        <tr class="category">
            <td>Grăsimi totale</td>
            <td>20g</td>
            <td>31%</td>
        </tr>
        <tr>
            <td>- din care saturate</td>
            <td>4g</td>
            <td>20%</td>
        </tr>
        <tr class="category">
            <td>Carbohidrați</td>
            <td>60g</td>
            <td>20%</td>
        </tr>
        <tr>
            <td>- din care zaharuri</td>
            <td>25g</td>
            <td>28%</td>
        </tr>
        <tr class="category">
            <td>Fibre</td>
            <td>7g</td>
            <td>28%</td>
        </tr>
        <tr>
            <td>Sodiu</td>
            <td>250mg</td>
            <td>10%</td>
        </tr>
        <tr class="category">
            <td>Alergeni</td>
            <td>Gluten, lactate, nuci</td>
            <td>-</td>
        </tr>
    </tbody>
</table>

<p style="font-size: 16px; color: #7a541f;">*DZR = Doza Zilnică Recomandată, bazată pe o dietă de 2000 kcal.</p>

<div class="offer">
    Promoție specială: 20 lei/pachet
</div>


<div style="position: relative; width: 100%;">
    <div style="position: absolute; top: 0; left: 0; padding: 15px 0px;">
        <a href="/dulciuri" class="navigation-button" style="display: flex; align-items: center; ">
            <img src="images\SvgImages\arrow-return-left.svg" style="margin-right: 5px;">
            Dulciuri
        </a>
    </div>
<div class="navigation-container">
    <a href="/dulciuri/FerreroRocher"  class="navigation-button">Ferrero rocher</a>
    <a href="/dulciuri/Acadele"  class="navigation-button">Acadele</a>
    <a href="/dulciuri/Fursecuri"  class="navigation-button">Fursecuri</a>
    <a href="/dulciuri/TurteDulci"  class="navigation-button">Turte dulci</a>
</div>
</div>
</body>
</html>

