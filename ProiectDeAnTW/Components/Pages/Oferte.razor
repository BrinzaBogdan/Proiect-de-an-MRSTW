@page "/Oferte"


<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Magazin Online - Banner Principal</title>
    <!-- Link către Bootstrap 4 CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .carousel-item img {
            width: 100%;
            height: 600px;
            object-fit: cover;
        }
        .carousel-caption {
            background: rgba(0, 0, 0, 0.5);
            padding: 20px;
        }
        .btn-banner {
            background-color: #ff6600;
            color: white;
            font-size: 18px;
        }
        .btn-banner:hover {
            background-color: #e55b00;
        }
    </style>
</head>
<body>

<!-- Banner Principal (Slider) -->
<section id="banner" class="container-fluid p-0">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active">
                <img src="images/PromotieRosii.webp" class="d-block w-100" alt="Oferte speciale">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Reduceri de până la 50%!</h5>
                    <p>Descoperă produsele tale preferate acum la prețuri imbatabile.</p>
                    <a href="/legume/Rosii" class="btn btn-banner">Vezi Produse</a>
                </div>
            </div>
            <!-- Slide 2 -->
            <div class="carousel-item">„
                <img src="images/PromotiePeste.jpg" class="d-block w-100" alt="Produse noi">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Produse Noi pe Stoc!</h5>
                    <p>Fii printre primii care le testează.</p>
                    <a href="/peste/Dalmors" class="btn btn-banner">Vezi Produse Noi</a>
                </div>
            </div>
            <!-- Slide 3 -->
            <div class="carousel-item">
                <img src="images\PromotiePaste.webp" class="d-block w-100" alt="Reduceri de sezon">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Reduceri de Sezon!</h5>
                    <p>Pregătește-te pentru sezonul următor cu reduceri exclusive.</p>
                    <a href="/paste/PastaPenne" class="btn btn-banner">Vezi Oferte</a>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>

<!-- Linkuri Bootstrap JS și dependințele pentru carousel -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>

